# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/yourDatabaseName
DB_USER=username
DB_PASS=password

# Authentication (if your app includes user authentication)
JWT_SECRET=yourSuperSecretKey
TOKEN_EXPIRES_IN=3600

# External APIs (examples)
GOOGLE_API_KEY=yourGoogleApiKey
WEATHER_API_KEY=yourWeatherApiKey

# Email Configuration (if your app sends emails)
EMAIL_HOST=smtp.youremailprovider.com
EMAIL_PORT=587
EMAIL_USER=yourEmailUsername
EMAIL_PASS=yourEmailPassword

# Logging
LOG_LEVEL=debug

# Feature Flags
FEATURE_X_ENABLED=true
FEATURE_Y_ENABLED=false
